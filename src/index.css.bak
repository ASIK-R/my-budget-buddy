/* Enhanced CSS variables for modern UI */
:root {
  /* Brand Color Palette */

  /* Gradient 1: #FFFDEE → #E3EF26 */
  --gradient-1-start: #FFFDEE;
  --gradient-1-end: #E3EF26;
  
  /* Gradient 2: #E2FBCE → #076653 */
  --gradient-2-start: #E2FBCE;
  --gradient-2-end: #076653;
  
  /* Solid Colors */
  --brand-dark: #0C342C;
  --brand-accent: #076653;
  --brand-text: #06231D;
  
  /* Enhanced Text Colors for Better Readability */
  --text-primary-light: #06231D;     /* Primary text in light mode */
  --text-secondary-light: #334155;   /* Secondary text in light mode */
  --text-tertiary-light: #64748b;    /* Tertiary text in light mode */
  --text-disabled-light: #94a3b8;    /* Disabled text in light mode */
  --text-primary-dark: #f8fafc;      /* Primary text in dark mode */
  --text-secondary-dark: #e2e8f0;    /* Secondary text in dark mode */
  --text-tertiary-dark: #94a3b8;     /* Tertiary text in dark mode */
  --text-disabled-dark: #64748b;     /* Disabled text in dark mode */
  
  /* Success, Warning, Error Colors */
  --success-light: #16a34a;
  --success-dark: #4ade80;
  --warning-light: #d97706;
  --warning-dark: #fbbf24;
  --error-light: #dc2626;
  --error-dark: #f87171;
  
  /* Modern UI variables */
  --radius-sm: 0.375rem;
  --radius-md: 0.5rem;
  --radius-lg: 0.75rem;
  --radius-xl: 1rem;
  --radius-2xl: 1.25rem;
  --radius-3xl: 1.5rem;
  --radius-full: 9999px;
  --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 5%);
  --shadow: 0 1px 3px 0 rgb(0 0 0 / 10%), 0 1px 2px -1px rgb(0 0 0 / 10%);
  --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 10%), 0 2px 4px -2px rgb(0 0 0 / 10%);
  --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 10%), 0 4px 6px -4px rgb(0 0 0 / 10%);
  --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 10%), 0 8px 10px -6px rgb(0 0 0 / 10%);
  --shadow-2xl: 0 25px 50px -12px rgb(0 0 0 / 25%);
  --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-normal: 300ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 500ms cubic-bezier(0.4, 0, 0.2, 1);
  --spacing-1: 0.25rem;
  --spacing-2: 0.5rem;
  --spacing-3: 0.75rem;
  --spacing-4: 1rem;
  --spacing-5: 1.25rem;
  --spacing-6: 1.5rem;
  --spacing-8: 2rem;
  --spacing-10: 2.5rem;
  --spacing-12: 3rem;
}

/* Base styles */
body {
  font-family: Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

  /* Ensure the body takes full height */
  min-height: 100vh;
}

/* Consistent heading styles */
.page-title {
  @apply text-2xl md:text-3xl lg:text-4xl font-bold text-brand-dark dark:text-white;

  line-height: 1.2;
}

.section-title {
  @apply text-xl md:text-2xl lg:text-3xl font-bold text-primary mb-4;

  line-height: 1.25;
}

.page-subtitle {
  @apply text-sm md:text-base lg:text-lg text-secondary mt-1;

  line-height: 1.5;
}

/* Enhanced Custom Components */
.card {
  @apply bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 border border-gray-100 dark:border-gray-700/50 transition-all duration-300;

  box-shadow: 0 4px 12px rgb(0 0 0 / 5%);
}

.card:hover {
  @apply shadow-xl;

  transform: translateY(-2px);
}

.card-title {
  @apply text-lg md:text-xl lg:text-2xl font-bold text-primary mb-4;

  line-height: 1.3;
}

.card-subtitle {
  @apply text-sm md:text-base text-secondary mb-2;

  line-height: 1.4;
}

.card-content {
  @apply text-primary;
}

.card-caption {
  @apply text-tertiary text-sm;
}

/* Consistent stat cards */
.stat-card {
  @apply card;
  @apply p-4 sm:p-5 md:p-6;
}

.stat-card-title {
  @apply text-xs sm:text-sm font-semibold text-tertiary mb-1;
}

.stat-card-value {
  @apply text-lg sm:text-xl md:text-2xl font-bold text-primary;
}

.stat-card-icon {
  @apply rounded-xl p-2 sm:p-3;
}

/* Enhanced Glass card with brand colors */
.glass-card {
  background: rgb(255 253 238 / 80%);
  backdrop-filter: blur(12px);
  backdrop-filter: blur(12px);
  border-radius: var(--radius-2xl);
  border: 1px solid rgb(227 239 38 / 30%);
  box-shadow: 0 8px 32px 0 rgb(7 102 83 / 15%);
  padding: var(--spacing-6);
  transition: all var(--transition-normal);

  /* Fallback for browsers that don't support backdrop-filter */
  @supports not (backdrop-filter: blur(10px)) {
    background: rgb(255 253 238 / 95%);
  }
}

.glass-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 40px 0 rgb(7 102 83 / 20%);
}

@media (prefers-color-scheme: dark) {
  .glass-card {
    background: rgb(12 52 44 / 80%);
    border: 1px solid rgb(226 251 206 / 20%);
    box-shadow: 0 8px 32px 0 rgb(0 0 0 / 30%);

    /* Fallback for browsers that don't support backdrop-filter */
    @supports not (backdrop-filter: blur(10px)) {
      background: rgb(12 52 44 / 95%);
    }
  }
  
  .glass-card:hover {
    box-shadow: 0 12px 40px 0 rgb(0 0 0 / 40%);
  }
}

/* Enhanced Buttons */
.btn {
  @apply inline-flex items-center justify-center rounded-xl font-semibold transition-all cursor-pointer border-none px-4 py-2.5 sm:px-5 sm:py-3;

  transition: all var(--transition-fast);
  box-shadow: 0 2px 6px rgb(0 0 0 / 10%);
}

.btn:focus {
  outline: 2px solid transparent;
  outline-offset: 2px;
}

.btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgb(0 0 0 / 15%);
}

.btn:active {
  transform: translateY(0);
}

.btn-primary {
  background: linear-gradient(135deg, var(--gradient-1-start), var(--gradient-1-end));
  color: var(--brand-dark);
  font-weight: 700;
  border: none;
  box-shadow: 0 4px 12px rgb(227 239 38 / 30%);
}

.btn-primary:hover {
  background: linear-gradient(135deg, var(--gradient-1-end), var(--gradient-1-start));
  transform: translateY(-3px);
  box-shadow: 0 6px 16px rgb(227 239 38 / 40%);
}

/* Enhanced darker green button variant */
.btn-dark-green {
  background: linear-gradient(135deg, #076653, #06231D);
  color: white;
  font-weight: 700;
  border: none;
  box-shadow: 0 4px 12px rgb(7 102 83 / 30%);
}

.btn-dark-green:hover {
  background: linear-gradient(135deg, #06231D, #076653);
  transform: translateY(-3px);
  box-shadow: 0 6px 16px rgb(7 102 83 / 40%);
}

.btn-secondary {
  background: linear-gradient(135deg, var(--gradient-2-start), var(--gradient-2-end));
  color: white;
  font-weight: 700;
  border: none;
  box-shadow: 0 4px 12px rgb(7 102 83 / 30%);
}

.btn-secondary:hover {
  background: linear-gradient(135deg, var(--gradient-2-end), var(--gradient-2-start));
  transform: translateY(-3px);
  box-shadow: 0 6px 16px rgb(7 102 83 / 40%);
}

/* Outline buttons */
.btn-outline {
  @apply border-2 border-brand-accent text-brand-accent bg-transparent;

  font-weight: 600;
}

.btn-outline:hover {
  @apply bg-brand-accent text-white;
}

/* Small buttons */
.btn-sm {
  @apply px-3 py-1.5 sm:px-3.5 sm:py-2 text-xs sm:text-sm;
}

/* Medium buttons */
.btn-md {
  @apply px-4 py-2 sm:px-5 sm:py-2.5 text-sm sm:text-base;
}

/* Large buttons */
.btn-lg {
  @apply px-5 py-3 sm:px-6 sm:py-3.5 text-base sm:text-lg;
}

@media (prefers-color-scheme: dark) {
  .btn-secondary {
    background: linear-gradient(135deg, var(--gradient-2-end), var(--gradient-2-start));
    color: white;
  }
  
  .btn-secondary:hover {
    background: linear-gradient(135deg, var(--gradient-2-start), var(--gradient-2-end));
  }
  
  .btn-dark-green {
    background: linear-gradient(135deg, #06231D, #076653);
    color: white;
  }
  
  .btn-dark-green:hover {
    background: linear-gradient(135deg, #076653, #06231D);
  }
}

/* Enhanced Form Inputs */
.form-input {
  @apply w-full rounded-xl border border-gray-300 px-3 py-2.5 sm:px-4 sm:py-3 text-sm sm:text-base transition-all text-primary;

  transition: all var(--transition-fast);
  box-shadow: 0 1px 3px rgb(0 0 0 / 5%);
  background-color: white;
}

.form-input:focus {
  @apply outline-none border-primary-500 ring-4 ring-primary-500/20;

  box-shadow: 0 2px 8px rgb(227 239 38 / 20%);
}

.form-input::placeholder {
  @apply text-tertiary;
}

.form-select {
  @apply form-input pr-10 appearance-none;

  background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='currentColor'%3e%3cpath fill-rule='evenodd' d='M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z' clip-rule='evenodd' /%3e%3c/svg%3e");
  background-position: right 0.5rem center;
  background-repeat: no-repeat;
  background-size: 1.5em 1.5em;
}

@media (prefers-color-scheme: dark) {
  .form-input {
    @apply bg-gray-800 border-gray-600 text-primary;
  }
  
  .form-input:focus {
    @apply border-primary-500 ring-primary-500/30;

    box-shadow: 0 2px 8px rgb(227 239 38 / 30%);
  }
  
  .form-input::placeholder {
    @apply text-tertiary;
  }
  
  .form-select {
    background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20' fill='white'%3e%3cpath fill-rule='evenodd' d='M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z' clip-rule='evenodd' /%3e%3c/svg%3e");
  }
}

/* Focus ring for accessibility */
.focus-ring:focus {
  @apply outline-2 outline-primary-500 outline-offset-2;
}

/* Enhanced Gradient backgrounds */
.bg-gradient-1 {
  background: linear-gradient(135deg, var(--gradient-1-start), var(--gradient-1-end));
}

.bg-gradient-2 {
  background: linear-gradient(135deg, var(--gradient-2-start), var(--gradient-2-end));
}

/* Enhanced Gradient text */
.gradient-text {
  background: linear-gradient(135deg, var(--gradient-1-start), var(--gradient-1-end));
  background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 800;
}

.text-brand-dark {
  color: var(--brand-dark);
}

.text-brand-accent {
  color: var(--brand-accent);
}

.text-brand-text {
  color: var(--brand-text);
}

/* Enhanced Text Color Classes for Better Readability */
.text-primary {
  color: var(--text-primary-light);
}

.dark .text-primary {
  color: var(--text-primary-dark);
}

.text-secondary {
  color: var(--text-secondary-light);
}

.dark .text-secondary {
  color: var(--text-secondary-dark);
}

.text-tertiary {
  color: var(--text-tertiary-light);
}

.dark .text-tertiary {
  color: var(--text-tertiary-dark);
}

.text-disabled {
  color: var(--text-disabled-light);
}

.dark .text-disabled {
  color: var(--text-disabled-dark);
}

/* Enhanced Status Colors */
.text-success {
  color: var(--success-light);
}

.dark .text-success {
  color: var(--success-dark);
}

.text-warning {
  color: var(--warning-light);
}

.dark .text-warning {
  color: var(--warning-dark);
}

.text-error {
  color: var(--error-light);
}

.dark .text-error {
  color: var(--error-dark);
}

/* Enhanced Glassmorphism effect */
.glass-effect {
  background: rgb(255 255 255 / 15%);
  backdrop-filter: blur(12px);
  backdrop-filter: blur(12px);
  border: 1px solid rgb(255 255 255 / 25%);
  box-shadow: 0 8px 32px 0 rgb(31 38 135 / 40%);
  border-radius: var(--radius-xl);
  transition: all var(--transition-normal);

  /* Fallback for browsers that don't support backdrop-filter */
  @supports not (backdrop-filter: blur(10px)) {
    background: rgb(255 255 255 / 40%);
  }
}

.glass-effect:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 40px 0 rgb(31 38 135 / 50%);
}

@media (prefers-color-scheme: dark) {
  .glass-effect {
    background: rgb(30 41 59 / 40%);
    border: 1px solid rgb(255 255 255 / 15%);
    box-shadow: 0 8px 32px 0 rgb(0 0 0 / 40%);

    /* Fallback for browsers that don't support backdrop-filter */
    @supports not (backdrop-filter: blur(10px)) {
      background: rgb(30 41 59 / 60%);
    }
  }
  
  .glass-effect:hover {
    box-shadow: 0 12px 40px 0 rgb(0 0 0 / 50%);
  }
}

/* Stat Card Enhancement */
.stat-card {
  @apply bg-gradient-to-br from-white to-gray-50 dark:from-gray-800 dark:to-gray-900 rounded-2xl p-5 border border-gray-100 dark:border-gray-700/50 shadow-md transition-all duration-300;

  box-shadow: 0 4px 12px rgb(0 0 0 / 5%);
}

.stat-card:hover {
  @apply shadow-lg;

  transform: translateY(-3px);
}

.stat-card-title {
  @apply text-xs md:text-sm font-semibold text-tertiary mb-1;
}

.stat-card-value {
  @apply text-lg md:text-2xl font-bold text-primary;
}

.stat-card-icon {
  @apply rounded-xl p-3;
}

/* Navigation item active state */
.nav-item-active {
  background-color: var(--primary-500);
  color: white;
}

