/* Enhanced responsive grid utilities for better layout control */
.grid-cols-responsive {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 1rem;
}

.grid-cols-responsive-sm {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 0.75rem;
}

.grid-cols-responsive-lg {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 1.25rem;
}

/* Container queries for more flexible responsive design */
@container (min-width: 320px) {
  .container\:sm\:p-2 { padding: var(--spacing-2); }
  .container\:sm\:p-3 { padding: var(--spacing-3); }
  .container\:sm\:gap-2 { gap: var(--spacing-2); }
  .container\:sm\:gap-3 { gap: var(--spacing-3); }
}

@container (min-width: 640px) {
  .container\:md\:p-4 { padding: var(--spacing-4); }
  .container\:md\:p-5 { padding: var(--spacing-5); }
  .container\:md\:gap-4 { gap: var(--spacing-4); }
  .container\:md\:gap-5 { gap: var(--spacing-5); }
  
  .grid-cols-container-sm {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
}

@container (min-width: 1024px) {
  .container\:lg\:p-6 { padding: var(--spacing-6); }
  .container\:lg\:p-8 { padding: var(--spacing-8); }
  .container\:lg\:gap-6 { gap: var(--spacing-6); }
  .container\:lg\:gap-8 { gap: var(--spacing-8); }
  
  .grid-cols-container-md {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.25rem;
  }
}

@container (min-width: 1280px) {
  .grid-cols-container-lg {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }
}

/* Enhanced card components with better responsive behavior */
.card {
  @apply bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-6 border border-gray-100 dark:border-gray-700/50 transition-all duration-300;

  box-shadow: 0 4px 12px rgb(0 0 0 / 5%);
}

.card:hover {
  @apply shadow-xl;

  transform: translateY(-2px);
}

/* Responsive card padding */
.card.responsive-padding {
  @apply p-4 sm:p-5 md:p-6 lg:p-7 xl:p-8;
}

/* Enhanced stat cards with better responsive layout */
.stat-card {
  @apply card;
  @apply p-4 sm:p-5 md:p-6;
}

.stat-card-title {
  @apply text-xs sm:text-sm font-semibold text-tertiary mb-1;
}

.stat-card-value {
  @apply text-lg sm:text-xl md:text-2xl font-bold text-primary;
}

.stat-card-icon {
  @apply rounded-xl p-2 sm:p-3;
}

/* Enhanced buttons with better responsive sizing */
.btn {
  @apply inline-flex items-center justify-center rounded-xl font-semibold transition-all cursor-pointer border-none px-4 py-2.5 sm:px-5 sm:py-3;

  transition: all var(--transition-fast);
  box-shadow: 0 2px 6px rgb(0 0 0 / 10%);
}

/* Responsive button sizes */
.btn-sm {
  @apply px-3 py-1.5 sm:px-3.5 sm:py-2 text-xs sm:text-sm;
}

.btn-md {
  @apply px-4 py-2 sm:px-5 sm:py-2.5 text-sm sm:text-base;
}

.btn-lg {
  @apply px-5 py-3 sm:px-6 sm:py-3.5 text-base sm:text-lg;
}

/* Enhanced form inputs with better responsive sizing */
.form-input {
  @apply w-full rounded-xl border border-gray-300 px-3 py-2.5 sm:px-4 sm:py-3 text-sm sm:text-base transition-all text-primary;

  transition: all var(--transition-fast);
  box-shadow: 0 1px 3px rgb(0 0 0 / 5%);
  background-color: white;
}

/* Enhanced spacing utilities for better responsive design */
.space-y-responsive > :not([hidden]) ~ :not([hidden]) {
  --tw-space-y-reverse: 0;

  margin-top: calc(1rem * calc(1 - var(--tw-space-y-reverse)));
  margin-bottom: calc(1rem * var(--tw-space-y-reverse));
}

@media (width >= 640px) {
  .space-y-responsive > :not([hidden]) ~ :not([hidden]) {
    --tw-space-y-reverse: 0;

    margin-top: calc(1.25rem * calc(1 - var(--tw-space-y-reverse)));
    margin-bottom: calc(1.25rem * var(--tw-space-y-reverse));
  }
}

@media (width >= 768px) {
  .space-y-responsive > :not([hidden]) ~ :not([hidden]) {
    --tw-space-y-reverse: 0;

    margin-top: calc(1.5rem * calc(1 - var(--tw-space-y-reverse)));
    margin-bottom: calc(1.5rem * var(--tw-space-y-reverse));
  }
}

@media (width >= 1024px) {
  .space-y-responsive > :not([hidden]) ~ :not([hidden]) {
    --tw-space-y-reverse: 0;

    margin-top: calc(2rem * calc(1 - var(--tw-space-y-reverse)));
    margin-bottom: calc(2rem * var(--tw-space-y-reverse));
  }
}

/* Enhanced flex utilities for better responsive layout */
.flex-responsive {
  @apply flex flex-col;
}

@media (width >= 768px) {
  .flex-responsive {
    @apply flex-row;
  }
}

/* Enhanced section spacing for better visual hierarchy */
.section-spacing {
  @apply py-4 sm:py-5 md:py-6 lg:py-8;
}

/* Enhanced header styles for better responsive behavior */
.header-responsive {
  @apply px-3 py-3 sm:px-4 sm:py-4 md:px-5 md:py-5;
}

/* Enhanced padding utilities for better responsive spacing */
.p-responsive {
  @apply p-3 sm:p-4 md:p-5 lg:p-6;
}

.m-responsive {
  @apply m-3 sm:m-4 md:m-5 lg:m-6;
}

/* Enhanced rounded utilities for better responsive design */
.rounded-responsive {
  @apply rounded-lg sm:rounded-xl md:rounded-2xl;
}

/* Enhanced shadow utilities for better responsive design */
.shadow-responsive {
  @apply shadow sm:shadow-md md:shadow-lg;
}

/* Enhanced transition utilities for better responsive animations */
.transition-responsive {
  @apply transition-all duration-200 sm:duration-300;
}

/* Enhanced height utilities for better responsive layout */
.h-responsive {
  @apply h-auto sm:h-screen md:h-screen;
}

/* Enhanced width utilities for better responsive layout */
.w-responsive {
  @apply w-full sm:w-full md:w-auto;
}

/* Enhanced gap utilities for better responsive spacing */
.gap-responsive {
  @apply gap-2 sm:gap-3 md:gap-4 lg:gap-5;
}

/* Enhanced margin utilities for better responsive spacing */
.mx-responsive {
  @apply mx-2 sm:mx-3 md:mx-4 lg:mx-5;
}

.my-responsive {
  @apply my-2 sm:my-3 md:my-4 lg:my-5;
}

/* Enhanced padding utilities for better responsive spacing */
.px-responsive {
  @apply px-2 sm:px-3 md:px-4 lg:px-5;
}

.py-responsive {
  @apply py-2 sm:py-3 md:py-4 lg:py-5;
}

/* Consistent spacing scale based on design system */
.spacing-1 {
  margin: var(--spacing-1);
  padding: var(--spacing-1);
}

.spacing-2 {
  margin: var(--spacing-2);
  padding: var(--spacing-2);
}

