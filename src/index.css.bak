/* Fluid spacing utilities */
.spacing-fluid-1 {
  margin: clamp(0.25rem, 0.2rem + 0.25vw, 0.5rem);
  padding: clamp(0.25rem, 0.2rem + 0.25vw, 0.5rem);
}

.spacing-fluid-2 {
  margin: clamp(0.5rem, 0.4rem + 0.5vw, 1rem);
  padding: clamp(0.5rem, 0.4rem + 0.5vw, 1rem);
}

.spacing-fluid-3 {
  margin: clamp(0.75rem, 0.6rem + 0.75vw, 1.5rem);
  padding: clamp(0.75rem, 0.6rem + 0.75vw, 1.5rem);
}

.spacing-fluid-4 {
  margin: clamp(1rem, 0.8rem + 1vw, 2rem);
  padding: clamp(1rem, 0.8rem + 1vw, 2rem);
}

.spacing-fluid-5 {
  margin: clamp(1.5rem, 1.2rem + 1.5vw, 3rem);
  padding: clamp(1.5rem, 1.2rem + 1.5vw, 3rem);
}

.spacing-fluid-6 {
  margin: clamp(2rem, 1.6rem + 2vw, 4rem);
  padding: clamp(2rem, 1.6rem + 2vw, 4rem);
}

/* Print styles */
@media print {
  .no-print {
    display: none !important;
  }
  
  body {
    background-color: white !important;
    color: black !important;
  }
  
  .card {
    box-shadow: none !important;
    border: 1px solid #ccc !important;
  }
}