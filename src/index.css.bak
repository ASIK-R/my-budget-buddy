/* Directional spacing utilities */
.pt-responsive {
  @apply pt-2 sm:pt-3 md:pt-4 lg:pt-5;
}

.pb-responsive {
  @apply pb-2 sm:pb-3 md:pb-4 lg:pb-5;
}

.pl-responsive {
